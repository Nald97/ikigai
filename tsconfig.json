  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "pages/characters/index.jsx", "components/UI/avatar-card/AvatarCard.jsx", "pages/Home.jsx", "components/UI/bio-card/BioCard.jsx", "components/UI/experience-card/ExperienceCard.jsx", "components/UI/skills-card/SkillsCard.jsx", "components/layout/Header.jsx"],
  "exclude": ["node_modules"]
}
